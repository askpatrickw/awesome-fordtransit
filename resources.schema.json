{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Awesome Ford Transit Resources",
  "type": "object",
  "required": [
    "categories"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "schemaVersion": {
          "type": "integer",
          "minimum": 1
        },
        "generated": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "items"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "title": {
            "type": "string"
          },
          "parent": {
            "type": [
              "string",
              "null"
            ]
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "url",
                "title",
                "description"
              ],
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string",
                  "maxLength": 500
                },
                "tags": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "added": {
                  "type": "string",
                  "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                },
                "sourceIssue": {
                  "type": [
                    "integer",
                    "null"
                  ]
                },
                "approved": {
                  "type": "boolean"
                },
                "deprecated": {
                  "type": [
                    "boolean",
                    "null"
                  ]
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}